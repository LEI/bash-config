[os.android]
command = "apt-get"
install = "install -qqy %s"
remove = "remove -qqy %s"
update = "update -qqy %s"
packages = [
  "busybox",
  "ca-certificates",
  "coreutils",
  "curl",
  "grep",
  "less",
  "man",
  # "openssh",
  # "openssl",
  # "readline",
  "tree"
]

[os.arch]
command = "pacman --no-confirm"
install = "-Sy %s"
remove = "-R %s"
update = "-Syu %s"


[os.darwin]
command = "brew"
install = "install %s"
remove = "remove %s"
update = "update %s"
packages = [
  "ag"
]

[os.debian]
command = "apt-get"
install = "install -qqy %s"
remove = "remove -qqy %s"
update = "update -qqy %s"
packages = [
  "apt-utils",
  "ca-certificates",
  "coreutils",
  "curl",
  "grep",
  "less",
  "man",
  "silversearcher-ag",
]

[pkg.git]
packages = ["git"]

[pkg.git.debian]
packages = "git-core"

[pkg.git.vars.name]
prompt = "What is your github full name?"
default = "GIT_AUTHOR_NAME"
[pkg.git.vars.user]
prompt = "What is your github username?"
default = "GIT_AUTHOR_USERNAME"
[pkg.git.vars.email]
prompt = "What is your github email?"
default = "GIT_AUTHOR_EMAIL"
