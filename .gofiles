[os.android]
command "apt-get"
install = "install -qqy %s"
remove = "remove -qqy %s"
update = "update -qqy %s"
list = [
  "busybox",
  "ca-certificates",
  "coreutils",
  "curl",
  "grep",
  "less",
  "man",
  # "openssh",
  # "openssl",
  # "readline",
  "tree"
]

[os.arch]
command = "pacman --no-confirm"
install = "-Sy %s"
remove = "-R %s"
update = "-Syu %s"


[os.darwin]
command = "brew"
install = "install %s"
remove = "remove %s"
update = "update %s"
list = [
  "ag"
]

[os.debian]
command "apt-get"
install = "install -qqy %s"
remove = "remove -qqy %s"
update = "update -qqy %s"
list = [
  "apt-utils",
  "ca-certificates",
  "coreutils",
  "curl",
  "grep",
  "less",
  "man",
  "silversearcher-ag",
]

[pkg.git]
list = ["git"]

[pkg.git.debian]
list = "git-core"

[pkg.git.tpl.GIT_AUTHOR_NAME]
prompt = "What is your github full name?"
[pkg.git.tpl.GIT_AUTHOR_USERNAME]
prompt = "What is your github username?"
[pkg.git.tpl.GIT_AUTHOR_EMAIL]
prompt = "What is your github email?"
